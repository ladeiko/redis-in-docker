{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "declaration": true,
    "outDir": "./dist",
    "strict": true,
    "noImplicitAny": false,
    "removeComments": true,
    "preserveConstEnums": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "stripInternal": true,
    "lib": [
      "es2017"
    ]
  },
  "exclude": [
    "dist",
    "test",
    "node_modules"
  ]
}
